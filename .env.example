# GreenOps Environment Configuration
# Copy to .env and fill in all values before starting.

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=https://your-domain.com

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=change_me_strong_random_password
DATABASE_URL=postgresql://greenops:change_me_strong_random_password@db:5432/greenops
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# =============================================================================
# SECURITY â€” all three are REQUIRED in production
# =============================================================================

# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION

# Set this on FIRST BOOT to replace the default admin123 password from the
# migration. The server applies it at startup then discards it from memory.
# Remove from your environment after the first successful boot.
ADMIN_INITIAL_PASSWORD=choose_a_strong_admin_password

JWT_EXPIRATION_HOURS=24
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=900

# =============================================================================
# ENERGY CALCULATION
# =============================================================================
IDLE_POWER_WATTS=65
ACTIVE_POWER_WATTS=120
ELECTRICITY_COST_PER_KWH=0.12

# =============================================================================
# AGENT / HEARTBEAT
# =============================================================================
HEARTBEAT_TIMEOUT_SECONDS=180
IDLE_THRESHOLD_SECONDS=300
OFFLINE_CHECK_INTERVAL_SECONDS=60

# =============================================================================
# AGENT CLIENT (used by agents connecting to the server)
# =============================================================================
GREENOPS_SERVER_URL=http://localhost:8000
GREENOPS_HEARTBEAT_INTERVAL=60
GREENOPS_IDLE_THRESHOLD=300
GREENOPS_RETRY_BASE=5
GREENOPS_RETRY_MAX=300
GREENOPS_MAX_RETRIES=5
